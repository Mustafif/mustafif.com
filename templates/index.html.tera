                <script>
        // Open and close sidebar
        function openNav() {
          document.getElementById("mySidebar").style.width = "60%";
          document.getElementById("mySidebar").style.display = "block";
        }
        
        function closeNav() {
          document.getElementById("mySidebar").style.display = "none";
        }
        document.getElementById("darkModeToggle").addEventListener("click", function() {
            const body = document.body;
            const darkModeIcon = document.getElementById("darkModeIcon");

            body.classList.toggle("dark-mode");

            // Toggle between moon and sun icons
            if (body.classList.contains("dark-mode")) {
                darkModeIcon.classList.remove("fa-moon");
                darkModeIcon.classList.add("fa-sun");
                body.style.color = "white";
            } else {
                darkModeIcon.classList.remove("fa-sun");
                darkModeIcon.classList.add("fa-moon");
                body.style.color = "black";
            }
        });
        function toggleDevToArticles() {
            var content = document.getElementById("devto-content");
            var icon = document.getElementById("devto-icon");

            if (content.style.display === "none") {
                content.style.display = "block";
                icon.className = "fa fa-caret-down";
            } else {
                content.style.display = "none";
                icon.className = "fa fa-caret-right";
            }
        }
        function toggleMoKaArticles() {
            var content = document.getElementById("moka-content");
            var icon = document.getElementById("moka-icon");
    
            if (content.style.display === "none") {
                content.style.display = "block";
                icon.className = "fa fa-caret-down";
            } else {
